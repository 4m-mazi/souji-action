{
  "name": "souji-action",
  "description": "Clean up the GitHub Action cache",
  "version": "1.4.3",
  "author": "",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4m-mazi/souji-action.git"
  },
  "bugs": {
    "url": "https://github.com/4m-mazi/souji-action/issues"
  },
  "keywords": [
    "actions",
    "cache",
    "delete"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "eslint .",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "pnpm run package -- --watch",
    "test": "jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "valibot": "0.41.0"
  },
  "devDependencies": {
    "@eslint/js": "9.10.0",
    "@octokit/openapi-types": "22.2.0",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "@types/node": "20.16.5",
    "@vercel/ncc": "0.38.1",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "eslint-plugin-jsonc": "2.16.0",
    "globals": "15.9.0",
    "jest": "29.7.0",
    "make-coverage-badge": "1.2.0",
    "prettier": "3.3.3",
    "prettier-eslint": "16.3.0",
    "ts-jest": "29.2.5",
    "typescript": "5.5.4",
    "typescript-eslint": "8.4.0"
  }
}
